#include <iostream>
#include <string>
#include <iomanip> // For std::fixed and std::setprecision

int main() {
    // Required Features 1: Prompt the user for input
    std::cout << "****** Welcome to the Tech Store Invoice Calculator ******" << std::endl;

    std::string customerName;
    std::cout << "Enter customer name: ";
    std::getline(std::cin, customerName); // Use getline for names with spaces

    int numberOfItems;
    std::cout << "Enter number of items: ";
    std::cin >> numberOfItems;

    double pricePerItem;
    std::cout << "Enter price per item: ";
    std::cin >> pricePerItem;

    char isMemberChar;
    std::cout << "Are you a store member (Y/N)? ";
    std::cin >> isMemberChar;
    bool isMember = (isMemberChar == 'Y' || isMemberChar == 'y');

    // Required Features 2: Perform calculations
    double subtotal = pricePerItem * numberOfItems;
    double discount = 0.0;

    // Apply main discount based on subtotal
    if (subtotal > 500.0) {
        discount = subtotal * 0.10; // 10% discount
    } else if (subtotal > 300.0) {
        discount = subtotal * 0.05; // 5% discount
    }

    double discountedTotal = subtotal - discount;

    // Apply additional member discount if applicable
    if (isMember) {
        discountedTotal -= (discountedTotal * 0.05); // Additional 5% on discounted total
    }

    double finalTotal = discountedTotal;

    // Output the invoice details
    std::cout << "==============" << std::endl;
    std::cout << "Customer Name: " << customerName << std::endl;
    std::cout << "Subtotal: $" << std::fixed << std::setprecision(2) << subtotal << std::endl;
    std::cout << "Total Discount Applied: $" << std::fixed << std::setprecision(2) << (subtotal - finalTotal) << std::endl;
    std::cout << "Final Total: $" << std::fixed << std::setprecision(2) << finalTotal << std::endl;
    std::cout << "==============" << std::endl;

    return 0;
}


