def get_student_info():
    """Prompts user for student details and returns them."""
    print("****** Welcome to the College Admission Checker ******")
    name = input("Enter student name: ")
    while True:
        try:
            gpa = float(input("Enter GPA (0.0 - 4.0): "))
            if 0.0 <= gpa <= 4.0:
                break
            else:
                print("Invalid GPA. Please enter a value between 0.0 and 4.0.")
        except ValueError:
            print("Invalid input. Please enter a number for GPA.")

    while True:
        try:
            sat = int(input("Enter SAT score (out of 1600): "))
            if 0 <= sat <= 1600:
                break
            else:
                print("Invalid SAT score. Please enter a value between 0 and 1600.")
        except ValueError:
            print("Invalid input. Please enter a whole number for SAT score.")

    while True:
        extracurriculars = input("Participated in extracurriculars? (Y/N): ").strip().upper()
        if extracurriculars in ('Y', 'N'):
            break
        else:
            print("Invalid input. Please enter 'Y' or 'N'.")
    return name, gpa, sat, extracurriculars

def check_admission(gpa, sat, extracurriculars):
    """Checks admission criteria and returns decision and reason."""
    # Criteria 1: High GPA & High SAT
    if gpa >= 3.5 and sat >= 1200:
        return "ACCEPTED", "Qualified based on high GPA and SAT score."
    # Criteria 2: Moderate GPA & SAT with Extracurriculars
    elif gpa >= 3.0 and sat >= 1000 and extracurriculars == 'Y':
        return "ACCEPTED", "Qualified with moderate scores due to extracurricular participation."
    # Else: Not eligible
    else:
        return "NOT ELIGIBLE", "Does not meet minimum criteria for admission."

def display_result(name, gpa, sat, extracurriculars, decision, reason):
    """Displays the admission result with clean formatting."""
    print("\n" + "="*25 + " ADMISSION RESULT " + "="*25)
    print(f"Student Name: {name}")
    print(f"GPA: {gpa:.2f}") # Format GPA to 2 decimal places
    print(f"SAT Score: {sat}")
    print(f"Extracurriculars: {'Yes' if extracurriculars == 'Y' else 'No'}")
    print("-" * 50)
    print(f"Admission Decision: {decision}")
    print(f"Reason: {reason}")
    print("=" * 60)
    print("\nCongratulations and best wishes!")

# --- Main Program ---
if __name__ == "__main__":
    student_name, student_gpa, student_sat, student_extra = get_student_info()
    admission_decision, admission_reason = check_admission(student_gpa, student_sat, student_extra)
    display_result(student_name, student_gpa, student_sat, student_extra, admission_decision, admission_reason)

